{
	"compilerOptions": {
		"baseUrl": "./src",
		"esModuleInterop": true,
		"module": "CommonJs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist/",
		"paths": {
			"*": ["./src/*"]
		},
		"skipLibCheck": true,
		"sourceMap": false,
		"target": "es6"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
